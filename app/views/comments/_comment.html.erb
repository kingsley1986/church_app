<div class="center_div_comment">
    <hr class="devidepost">
    <div class="commentbody"><%= comment.body %></div>
    </br>

    <span style="color:green"><%= comment.user&.first_name %></span>
    <span style="padding-left:20px;"><%= time_ago_in_words((comment.created_at)) %> ago</span></ul>

    <% if current_user && user_signed_in? && comment.try(:user_id) == current_user.id || current_user && current_user.admin? %>
        <span style="color:blue"><%= link_to "Delete", comment_path(comment), data: {confirm: 'Are you sure?'},  method: :delete, remote: true,  class:"deletecomment" %></span>
        <span style="color:blue"><%= link_to 'Edit', edit_comment_path(:id => comment.id), id: "edit-comment_link"%></span>
    <% end %>

</div>
