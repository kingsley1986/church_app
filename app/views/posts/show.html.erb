<div class="col-md-6 col-md-offset-3" style="text-align: center; padding-top:70px; position:relative; left:70px;">
  <div class="row item" >
    <div class="col-md-8"  style="background-color:white; margin-bottom:20px;">
      <h2><%= @post.title %></strike></h2>
      <div style="text-align: center;  text-align: justify;margin: 0 auto; padding-bottom:30px;"><%= @post.post_body %></div>
      <% @post.pictures.each do |pic, remov| %>
        <p><%= image_tag(pic.image.url(:medium), class: "") if pic.image? %></p>
        <p>posted <%= time_ago_in_words(@post.created_at) %> ago</p>
      <% end %>
      <% if current_user && user_signed_in? %>
        <% if [@post.liker_id].any? { |l| l&.include?(current_user.id)} %>
          <%= link_to "Unlike", unlike_post_path(@post, like: true), method: :delete, :remote => true,  :class => 'unlikepost', style:"color: red; margin-right: 20px" %>
        <%else %>
          <%= link_to "Like", like_post_path(@post, like: true), method: :post, remote: true, :class => 'likepost', style:"color: red; margin-top: 30px;" %>
        <% end %>
        <%= pluralize( @post.liker_id&.count, "like") %>
      <% end %>
      <% if  @post.liker_id&.size >= 1 %>
        <div class="fa fa-thumbs-o-up" style="margin-left:5px; margin-right:20px;"></div>
      <% end %>
        <%= "#{approved_comments.count} Comments" %>
        <%= render @post.comments %>
      <hr class="devidepost">
      <div class="col-md-6 col-md-offset-3 settingcommentform">
          <div class="col-md-8 anothersettingcomment">
            <h4>Make your Comments: </h4>
            <% if current_user && user_signed_in? %>
              <%= render "comments/form" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
