<div class="col-md-6 col-md-offset-3">
  <div class="row item" >
    <div class="col-md-8"  style="background-color:white; margin-bottom:20px;">
      <h2><%= @post.title %></strike></h2>
      <h5><%= @post.post_body %></h5>
      <p>posted <%= time_ago_in_words(@post.created_at) %> ago</p>
      <% @post.pictures.each do |pic, remov| %>
        <p><%= image_tag(pic.image.url(:medium), class: "img-responsive") if pic.image? %></p>
      <% end %>
      <% if current_user && user_signed_in? %>
        <% if [@post.liker_id].any? { |l| l&.include?(current_user.id)} %>
          <%= link_to "Unlike", unlike_post_path(@post, like: true), method: :delete, :class => 'unliker', style:"color: red; margin-right: 20px" %>
        <%else %>
          <%= link_to "Like", like_post_path(@post, like: true), method: :post, :class => 'liker', style:"color: red; margin-top: 30px;" %>
        <% end %>
        <%= pluralize( @post.liker_id&.count, "like") %>
      <% end %>
      <% if  @post.liker_id&.size >= 1 %>
        <div class="fa fa-thumbs-o-up" style="margin-left:5px; margin-right:20px;"></div>
      <% end %>
      <%= "#{@post.comments.count} Comments" %>
      <%= render @post.comments %>
      <hr class="devidepost">

      <h3> Add a Comment: </h3>
      <% if current_user && user_signed_in? %>
        <%= render "comments/form" %>
      <% end %>
    </div>
  </div>
</div>
