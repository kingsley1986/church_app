<div class="col-md-6 col-md-offset-3"  style="background-color:white">
  <div class="pages_details">
    <% @pages.each do |page| %>
      <% page.pictures.each_slice(4) do |imagail| %>
        <% imagail.each do |pic| %>
          <%= image_tag(pic.image.url(:medium)) %>
        <% end %>
      <% end %>
      <div style="margin-top:30px; margin-bottom:20px;"><%= page.body %></div>
    <% end %>
  </div>
</div>
